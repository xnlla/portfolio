---
import "@/styles/shape02.css";

import BaseLayout from "@/layouts/PortfolioLayout.astro";
const pageTitle = "unnamedworks";
const url = Astro.url.pathname;

const card_name = "/cards/blog.png";
import { Picture } from "astro:assets";
import img_site from "@/images/blog.png";
---

<style>
    @media (max-width: 480px) {
        div {
            /* 折り返し対応 */
            overflow-wrap: anywhere;
            word-break: keep-all;

            line-height: 1.2;
            margin: auto;
            padding-bottom: 12px;
        }
        div.parent_textarea {
            position: unset;
            width: 95%;
            height: auto;
        }
        div.title {
            position: unset;
            font-size: 9vw;
        }
        div.description {
            position: unset;
            font-size: 7.5vw;
        }
        div.detail {
            position: unset;
            font-size: 6.5vw;
        }
        div.picture {
            position: unset;
            width: 100%;
            max-width: 1100px;
        }
    }
    .parent {
        position: relative;
    }
    .parent_textarea {
        position: absolute;
        text-align: left;
        top: 65%;
        left: 45%;
        width: 50%;
        height: 35%;
    }
    .title {
        position: absolute;
        font-size: min(5vw, 56px);
    }
    .description {
        position: absolute;
        font-size: min(3vw, 34px);
        top: 20%;
    }
    .detail {
        position: absolute;
        font-size: min(2.2vw, 25px);
        top: 33%;
        left: 10%;
    }
    .parent_textarea {
        padding: 1%;
        line-height: 1.3;
        z-index: 0;
    }
    .parent_textarea div::before {
        background-color: #fff;
        content: "";
        filter: blur(5px);
        border-radius: 30px;
        position: absolute;
        top: -5px;
        right: -5px;
        bottom: -5px;
        left: -5px;
        z-index: -1;
    }
    p {
        margin: 0;
    }
</style>
<BaseLayout pageTitle={pageTitle} , page_url={url} , card_file={card_name}>
    <div class="parent shape02">
        <div class="picture"><Picture src={img_site} alt="unnamedworks" /></div>
        <div class="parent_textarea">
            <div class="title">
                <a href="https://unnamedworks.com/"> unnamedworks.com</a>
            </div>
            <div class="description">ー 趣味のブログです。</div>
            <div class="detail">
                <p>
                    <a href="https://astro.build/">
                        Astro</a
                    >でプログラミング<wbr />されました。
                </p>
                <p>
                    <a
                        href="https://www.cloudflare.com/ja-jp/developer-platform/pages/"
                    >
                        Cloudflare Pages</a
                    >で<wbr />デプロイされました。
                </p>
                <p>
                    <a href="https://www.newt.so/">newt</a>で管理<wbr
                    />されています。
                </p>
                <p>
                    裏で<a href="https://aws.amazon.com/jp/">AWS</a>が<wbr
                    />動いています。
                </p>
                <p>
                    <a href="https://github.com/nkte8/unnamedworks">
                        ソースコード</a
                    >
                    を公開<wbr />しています。
                </p>
            </div>
        </div>
    </div>
</BaseLayout>
