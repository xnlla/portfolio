---
import "@/styles/shape02.css";

import BaseLayout from "@/layouts/PortfolioLayout.astro";
const pageTitle = "profile";
const url = Astro.url.pathname;

const card_name = "/cards/prof.png";
import { Picture } from "astro:assets";
import img_prof from "@/images/prof.png";
import img_me from "@/images/me.png";

import { Passedyears } from "@/components/getpassedyear/main.tsx";
---

<style>
    div {
        /* 折り返し対応 */
        word-break: keep-all;
        overflow-wrap: break-word;
    }
    @media (max-width: 480px) {
        div {
            line-height: 1.2;
            margin: auto;
            padding-bottom: 12px;
        }
        div.parent_textarea {
            position: unset;
            top: 65%;
            left: 5%;
            width: 90%;
            height: auto;
        }
        div.title {
            position: unset;
            font-size: 12vw;
        }
        div.description {
            position: unset;
            font-size: 7.5vw;
            width: 100%;
        }
        div.detail {
            position: unset;
            font-size: 6.5vw;
            width: 100%;
        }
        img.charactor {
            width: 6.5vw;
        }
        img {
            aspect-ratio: unset;
        }
        div.picture {
            position: relative;
            left: 0;
            width: 100%;
            aspect-ratio: 9/10;
            overflow: hidden;
            max-width: 550px;
        }
        div.css_rikai {
            font-size: 6.5vw;
        }
        div.parent_textarea div.css_rikai::before {
            height: 140%;
            width: 62%;
        }
    }
    .parent {
        position: relative;
        aspect-ratio: 11/9;
        height: auto;
        margin-bottom: 3%;
        margin-top: 2%;
    }
    .parent_textarea {
        position: absolute;
        text-align: left;
        top: 10%;
        left: 10%;
        width: 45%;
        height: 70%;
    }
    .parent_textbox {
        position: relative;
        width: auto;
        margin-bottom: 24px;
    }
    .title {
        position: absolute;
        font-size: min(6vw, 68px);
    }
    .description {
        position: absolute;
        font-size: min(3.2vw, 36px);
        width: 90%;
        left: 5%;
    }
    .detail {
        position: absolute;
        font-size: min(2.2vw, 25px);
        left: 10%;
        width: 80%;
    }
    .charactor {
        width: min(2.2vw, 25px);
    }
    .parent_textarea {
        padding: 1%;
        line-height: 1.3;
        z-index: 0;
    }
    .parent_textarea div::before {
        background-color: #fff;
        content: "";
        filter: blur(5px);
        border-radius: 30px;
        position: absolute;
        top: -5px;
        right: -5px;
        bottom: -5px;
        left: -5px;
        z-index: -1;
    }
    .picture {
        position: absolute;
        width: 50%;
        left: 40%;
        z-index: -2;
    }
    .picture::after {
        position: absolute;
        content: "";
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        box-shadow: 0px -77px 30px -30px #fff inset;
    }
    p {
        margin: 0;
    }
    .css_rikai {
        word-wrap: unset;
        overflow-wrap: unset;
        margin: auto;
        padding-left: 2em;
        font-family: Arial, "MS PMincho", "Hiragino Mincho ProN",
            "Noto Serif CJK JP";
        font-size: min(2.5vw, 28px);
    }
    .parent_textarea div.css_rikai::before {
        word-wrap: unset;
        overflow-wrap: unset;
        filter: none;
        border-radius: 10px;

        border-width: 1.5px;
        border-color: #555;
        border-style: solid;
        width: 48%;
    }
    .parent_textarea div.css_rikai div {
        position: absolute;
        text-align: right;
    }
    .parent_textarea div.css_rikai div::before {
        filter: none;
        background-color: transparent;
    }
</style>
<BaseLayout pageTitle={pageTitle} , page_url={url} , card_file={card_name}>
    <div class="parent shape02">
        <div class="picture"><Picture src={img_prof} alt="profile" /></div>
        <div class="parent_textarea">
            <div class="parent_textbox" style="height: 47%;">
                <div class="title">
                    <p>活動を始めて</p>
                    <p>
                        約<Passedyears
                            client:load
                            from="2020-11-18"
                        />年経ちました。
                    </p>
                </div>
                <div class="description" style="top:56%">
                    名前を付けるのが苦手です…
                </div>
                <div class="detail" style="top:73%;">
                    <p>決まるまで未定義で<wbr />お願いします。</p>
                    <p>ななしとか、ななみんとか、N/Aとか<wbr /></p>
                    <p>
                        アビさんとか、<Picture
                            src={img_me}
                            alt="🖤"
                            class="charactor"
                        />
                        など色々です。
                    </p>
                </div>
            </div>
            <div class="parent_textbox" style="height: 45%;">
                <div class="title"><p>全て趣味です。</p></div>
                <div class="description" style="top:30%;">
                    <p>いろいろやってます。</p>
                </div>
                <div class="detail" style="top:50%;">
                    <p>
                        絵を描く、文字を書く、コードを書く、<wbr />
                        お菓子を作る、パンを焼く、<wbr />ゲームであそぶ、
                        旅行に行く、<wbr />ごはんを食べるなどが好きです。
                    </p>
                </div>
            </div>
            <div class="parent_textbox" style="height: 13%;">
                <div class="css_rikai">
                    CSS<br />
                    <div>
                        完全に理解してます<br />
                        <span style="padding-left:-2em" class="shape02">
                            …うそです。</span
                        >
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="shape02 detail" style="position:unset;margin: auto;">
        そんな感じです。<wbr />よろしくおねがいします。
    </div>
</BaseLayout>
