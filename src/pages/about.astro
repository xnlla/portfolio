---
import "@/styles/shape01.css";

import BaseLayout from "@/layouts/PortfolioLayout.astro";
const pageTitle = "about";
const url = Astro.url.pathname;

const card_name = "/cards/main.png";
import { Picture } from "astro:assets";
import img_site from "@/images/computing.png";

import Passedyears from "@/components/getpassedyear/main.tsx";
---

<style>
    .parent {
        position: relative;
        aspect-ratio: 11/9;
        width: 100%;
        height: auto;
    }
    .parent_textarea {
        position: absolute;
        top: 1%;
        left: 35%;
        text-align: left;
        width: 65%;
        height: 60%;
        z-index: 1;
    }
    .title {
        position: absolute;
        font-size: 8.5vmin;
        top: 7%;
    }
    .description {
        position: absolute;
        font-size: 5.5vmin;
        top: 50%;
        left: 9%;
    }
    .detail {
        position: absolute;
        font-size: 3.5vmin;
        top: 70%;
        left: 10%;
    }

    .parent_textarea div {
        padding: 1%;
        line-height: 1.5em;
        z-index: 0;
    }
    .parent_textarea div::before {
        background-color: #fff;
        content: "";
        filter: blur(5px);
        border-radius: 30px;
        position: absolute;
        top: -5px;
        right: -5px;
        bottom: -5px;
        left: -5px;
        z-index: -1;
    }
    .picture {
        position: absolute;
        bottom: -5%;
        width: 65%;
        z-index: 0;
    }
    p {
        margin: 0;
        line-height: 1.2;
    }
</style>
<BaseLayout pageTitle={pageTitle} , page_url={url} , card_file={card_name}>
    <div class="parent shape01">
        <div class="parent_textarea">
            <div class="title">
                <p>名前がきまらず</p>
                <p>
                    約<Passedyears
                        client:load
                        from="2020-11-18"
                    />年経ちました。
                </p>
            </div>
            <div class="description">よろしくおねがいします。</div>
            <div class="detail">
                <p>
                    <a href="https://astro.build/">astro</a
                    >でプログラミングされました。
                </p>
                <p>
                    <a
                        href="https://www.cloudflare.com/ja-jp/developer-platform/pages/"
                    >
                        Cloudflare Pages</a
                    >でデプロイされました。
                </p>
                <p>
                    <a href="https://github.com/nkte8/portfolio">ソースコード</a
                    >を公開しています。
                </p>
            </div>
        </div>

        <div class="picture"><Picture src={img_site} alt="about" /></div>
    </div>
</BaseLayout>
