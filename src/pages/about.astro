---
import "@/styles/shape01.css";

import BaseLayout from "@/layouts/PortfolioLayout.astro";
const pageTitle = "about";
const url = Astro.url.pathname;

const card_name = "/cards/main.png";
import { Picture } from "astro:assets";
import img_site from "@/images/computing.png";

import Passedyears from "@/components/getpassedyear/main.tsx";
---

<style>
    @media (max-width: 480px) {
        div {
            /* 折り返し対応 */
            overflow-wrap: anywhere;
            word-break: keep-all;

            line-height: 1.2;
            margin: auto;
            padding-bottom: 12px;
        }
        div.parent_textarea {
            position: unset;
            width: 95%;
            height: auto;
        }
        div.title {
            position: unset;
            font-size: 13.5vw;
        }
        div.description {
            position: unset;
            font-size: 9vw;
        }
        div.detail {
            position: unset;
            font-size: 6.5vw;
        }
        div.picture {
            position: unset;
            width: 100%;
            max-width: 715px;
        }
        div.parent {
            aspect-ratio: auto;
        }
    }
    .parent {
        position: relative;
        aspect-ratio: 11/9;
        height: auto;
    }
    .parent_textarea {
        position: absolute;
        top: 1%;
        left: 35%;
        text-align: left;
        width: 65%;
        height: 60%;
        z-index: 1;
    }
    .title {
        position: absolute;
        font-size: min(8.5vw, 95px);
        top: 7%;
    }
    .description {
        position: absolute;
        font-size: min(5.5vw, 60px);
        top: 50%;
        left: 9%;
    }
    .detail {
        position: absolute;
        font-size: min(3.5vw, 39px);
        top: 70%;
        left: 10%;
    }

    .parent_textarea {
        padding: 1%;
        line-height: 1.5em;
        z-index: 0;
    }
    .parent_textarea div::before {
        background-color: #fff;
        content: "";
        filter: blur(5px);
        border-radius: 30px;
        position: absolute;
        top: -5px;
        right: -5px;
        bottom: -5px;
        left: -5px;
        z-index: -1;
    }
    .picture {
        position: absolute;
        bottom: -5%;
        width: 65%;
        z-index: 0;
    }
    p {
        margin: 0;
        line-height: 1.2;
    }
</style>
<BaseLayout pageTitle={pageTitle} , page_url={url} , card_file={card_name}>
    <div class="parent shape01">
        <div class="picture"><Picture src={img_site} alt="about" /></div>
        <div class="parent_textarea">
            <div class="title">
                <p>名前がきまらず</p>
                <p>
                    約<Passedyears
                        client:load
                        from="2020-11-18"
                    />年経ちました。
                </p>
            </div>
            <div class="description">よろしくおねがいします。</div>
            <div class="detail">
                <p>
                    <a href="https://astro.build/">Astro</a>でプログラミング<wbr
                    />されました。
                </p>
                <p>
                    <a
                        href="https://www.cloudflare.com/ja-jp/developer-platform/pages/"
                    >
                        Cloudflare Pages</a
                    >で<wbr />デプロイされました。
                </p>
                <p>
                    <a href="https://github.com/nkte8/portfolio">ソースコード</a
                    >を公開<wbr />しています。
                </p>
            </div>
        </div>
    </div>
</BaseLayout>
